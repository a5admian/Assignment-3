<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>

<div class="jumbotron jumbotron-fluid">
  <h1 class="display-4"><%= title %></h1>
</div>
<div class ="container">
    <div class="row">
    <div class="col-md-offset-3 col-md-6">
        <!---Form for the 'Edit' page--->
        <form class="form" method="post">
        <div class="form-group">
            <label for="dayTextField">Date</label>
            <input type="date" class="form-control"
            id="dayTextField"
            name="day"
            value="<%= health.day%>"
            required>
            
        </div>

        <div class="form-group">
            <label for="exerTextField">Exercise</label>
            <input type="text" class="form-control"
            id="exerTextField"
            placeholder="Enter the Exercise"
            name="exercise" 
            value="<%= health.exercise%>"
            required>
        </div>

        <div class="form-group">
            <label for="formTextField">Duration</label>
            <input type="time" class="form-control"
            id="formTextField"
            placeholder="From:"
            name="from" 
            value="<%= health.from%>"
            required>
        </div>

        <div class="form-group">
            <label for="toTextField">Duration</label>
            <input type="time" class="form-control"
            id="toTextField"
            placeholder="To:"
            name="to" 
            value="<%= health.to%>"
            required>
        </div>

        <button class="btn-btn-primary" type="submit">
            <i class="fas fa-edit"></i> Submit 
        </button>

        <a href="/fitness" class="btn btn-warning">
            <i class="fas fa-undo"></i>Cancel</a>
        </form>
    </div>
    </div>
</div>

<%- include ../Partials/footer.ejs %>
<%- include ../Partials/bottom_nav.ejs %>