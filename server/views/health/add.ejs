<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>

<div class="jumbotron jumbotron-fluid">
  <h1 class="display-4"><%= title %></h1>
</div>
<div class ="container">
    <div class="row">
    <div class="col-md-offset-3 col-md-6">
    <!---Form for the 'Add' page--->
        <form class="form" method="post">
        <div class="form-group">
            <label for="dayTextField">Date</label>
            <input type="date" class="form-control"
            id="dayTextField"
            placeholder="Enter the Date"
            name="day" required>
        </div>

        <div class="form-group">
            <label for="exerTextField">Exercise</label>
            <input type="text" class="form-control"
            id="exerTextField"
            placeholder="Enter the Exercise"
            name="exercise" required>
        </div>

        <div class="form-group">
            <label for="fromTextField">From</label>
            <input type="time" class="form-control"
            id="fromTextField"
            placeholder="Enter the Duration"
            name="from" required>
        </div>

        <div class="form-group">
            <label for="toTextField">To</label>
            <input type="time" class="form-control"
            id="toTextField"
            placeholder="Enter the Duration"
            name="to" required>
        </div>

        <button class="btn-btn-primary" type="submit">
            <i class="fa-solid fa-check-to-slot"></i>Submit 
        </button>

        <a href="/fitness" class="btn btn-warning">
            <i class="fas fa-undo"></i>Cancel</a>
        </form>
    </div>
    </div>
</div>

<%- include ../Partials/footer.ejs %>
